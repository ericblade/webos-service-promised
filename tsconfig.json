{
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "node16",
        "target": "es2020",
        "lib": [
            "es2020"
        ],
        "declaration": true,
        "moduleResolution": "NodeNext",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "types": [
            "node"
        ],
        "esModuleInterop": true
    },
    "exclude": [
        "dist",
        "node_modules",
        "lib"
    ]
}